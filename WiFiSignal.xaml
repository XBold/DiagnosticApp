<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DiagnosticApp"
             x:Class="DiagnosticApp.WiFiSignal"
             Title="WiFiSignal">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               x:Name="lblWiFiSignal"
               VerticalOptions="Center" 
               HorizontalOptions="Center"
               FontSize="16"
               Margin="0,20"/>

        <Label Grid.Row="1"
               x:Name="lblFrequency"
               VerticalOptions="Center" 
               HorizontalOptions="Center"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="#2196F3"/>
        
        <Label Grid.Row="2"
               x:Name="lblRawValue"
               VerticalOptions="Center" 
               HorizontalOptions="Center"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="#2196F3"/>

        <Slider Grid.Row="3"
            x:Name="sldUpdateFrequency"
            Minimum="100"
            Maximum="2000"
            MinimumTrackColor="#BBDEFB"
            MaximumTrackColor="#E0E0E0"
            ThumbColor="#2196F3"
            Margin="20,0"
            HeightRequest="40"
            ValueChanged="SldUpdate"/>

        <FlexLayout Grid.Row="4"
                BindableLayout.ItemsSource="{Binding Ticks}"
                Direction="Row"
                JustifyContent="SpaceBetween"
                Margin="20,10">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}"
                      FontSize="10"
                      TextColor="#757575"
                      WidthRequest="40"
                      HorizontalTextAlignment="Center"/>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </FlexLayout>
    </Grid>
</ContentPage>